{
	"$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			},
			"style": {
				"useImportType": "error",
				"noDescendingSpecificity": "off"
			}
		}
	},
	"files": {
		"includes": ["apps/*/src/**/*.{js,ts,jsx,tsx}", "packages/*/src/**/*.{js,ts,jsx,tsx}"],
		"ignoreUnknown": true
	}
}
